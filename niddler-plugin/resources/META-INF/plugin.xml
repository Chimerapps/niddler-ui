<idea-plugin version="2">
    <id>com.your.company.unique.plugin.id</id>
    <name>Plugin display name here</name>
    <version>1.0</version>
    <vendor email="support@icapps.com" url="https://www.icapps.com">YourCompany</vendor>

    <description>This plugin enables the niddler ui inside the IDE</description>

    <change-notes>Initial release!
    </change-notes>

    <idea-version since-build="141.0"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Niddler tool window" anchor="bottom" factoryClass="com.icapps.niddler.ui.NiddlerToolWindow"/>
    </extensions>

    <actions>
        <action class="SimpleAction" id="SimpleAction">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>