<idea-plugin>
    <id>com.icapps.niddler</id>
    <name>Niddler</name>
    <version>2.0.0</version>
    <vendor email="support@icapps.com" url="https://www.icapps.com">iCapps &amp; Chimerapps</vendor>

    <description>This plugin enables the niddler ui inside the IDE</description>

    <change-notes><![CDATA[
    <b>2.0.0 - Complete internal rework!</b>
    <ul>
        <li>Tighter integration with intellij platform</li>
        <li>Performance optimizations</li>
        <li>Removed linked view (WIP)</li>
    </ul>
        ]]>
    </change-notes>

    <idea-version since-build="181.0" />

    <depends>com.intellij.modules.lang</depends>
    <depends optional="true">com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Niddler" anchor="bottom" factoryClass="com.chimerapps.niddler.ui.NiddlerToolWindowFactory" icon="/niddler_small.png" />
    </extensions>

    <actions>

    </actions>

</idea-plugin>