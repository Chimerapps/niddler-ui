<idea-plugin version="2">
    <id>com.icapps.niddler</id>
    <name>Niddler</name>
    <version>0.0.9</version>
    <vendor email="support@icapps.com" url="https://www.icapps.com">iCapps</vendor>

    <description>This plugin enables the niddler ui inside the IDE</description>

    <change-notes>0.0.9 - Remove required dependency on adb</change-notes>

    <idea-version since-build="141.0"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Niddler" anchor="bottom" factoryClass="com.icapps.niddler.ui.NiddlerToolWindow"
                    icon="/niddler_small.png"/>
    </extensions>

    <actions>

    </actions>

</idea-plugin>